{
  "name": "monad-openclaw-skill",
  "version": "0.1.0",
  "description": "Monad payment + execution toolset exposed as OpenClaw skills",
  "openclaw": {
    "extensions": [
      "./src/index.ts"
    ]
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "bootstrap:submodules": "git submodule update --init --recursive",
    "verify:submodules": "node scripts/verify-submodules.mjs",
    "verify:bridge-smoke": "npm run zig:build && tsx scripts/verify-bridge-smoke.ts",
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "dashboard:dev": "tsx apps/dashboard/server.ts",
    "export:templates": "npm run build && node apps/api/export-templates.mjs",
    "tools:verify-envelope": "tsx scripts/verify-tool-envelope.ts",
    "src:verify-bridge": "tsx scripts/verify-src-bridge-only.ts",
    "verify": "npm run verify:submodules && npm run src:verify-bridge && npm run verify:bridge-smoke && npm run tools:verify-envelope && npm run build",
    "verify:full": "npm run verify && npm run zig:offline",
    "zig:build": "zig build --prefix zig-core/zig-out --build-file zig-core/build.zig",
    "zig:test": "npm run zig:offline && npm run zig:smoke",
    "zig:offline": "npm run zig:build && python3 zig-core/tests/offline.py",
    "zig:smoke": "npm run zig:build && python3 zig-core/tests/smoke.py"
  },
  "dependencies": {
    "express": "^4.19.2",
    "sql.js": "^1.10.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.0"
  }
}
